<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Solution.DesktopApp.ViewModels"
             x:Class="Solution.DesktopApp.Views.MainView"
             x:DataType="viewModels:MainViewModel"
             Title="Számla Nyilvántartó Rendszer">
    
    <Grid BackgroundColor="#0a0a0a">
        <VerticalStackLayout 
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Spacing="20">
            
            <Label Text="Számla Nyilvántartó Rendszer"
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#cccccc" />
            
            <Label Text="Használja a menüt a műveletek végrehajtásához"
                   FontSize="16"
                   HorizontalOptions="Center"
                   TextColor="#999999" />
            <Image Source="bill.png" Aspect="AspectFit" HeightRequest="500" />
        </VerticalStackLayout>
    </Grid>
    
</ContentPage>
