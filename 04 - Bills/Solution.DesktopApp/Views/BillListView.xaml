<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Solution.DesktopApp.ViewModels"
             xmlns:models="clr-namespace:Solution.Core.Models;assembly=Solution.Services"
             xmlns:behaviors="clr-namespace:Solution.DesktopApp.Behaviors"
             x:Class="Solution.DesktopApp.Views.BillListView"
             x:DataType="viewModels:BillListViewModel"
             Title="Számlák áttekintése">

    <Grid RowDefinitions="Auto,*,Auto" Padding="20" BackgroundColor="#0A0A0A">
        
        <!-- Header -->
        <Border Grid.Row="0" 
                BackgroundColor="Black" 
                Stroke="#222222" 
                StrokeThickness="1"
                Margin="0,0,0,10"
                Padding="15">
            <Grid ColumnDefinitions="2*,2*,*,Auto">
                <Label Grid.Column="0" 
                       Text="Számla kelte" 
                       FontAttributes="Bold" 
                       FontSize="16"
                       TextColor="#cccccc"/>
                <Label Grid.Column="1" 
                       Text="Számlaszám" 
                       FontAttributes="Bold" 
                       FontSize="16"
                       TextColor="#cccccc"/>
                <Label Grid.Column="2" 
                       Text="Végösszeg" 
                       FontAttributes="Bold" 
                       FontSize="16"
                       HorizontalTextAlignment="End"
                       TextColor="#cccccc"/>
                <Label Grid.Column="3" 
                       Text="Műveletek" 
                       FontAttributes="Bold" 
                       FontSize="16"
                       HorizontalTextAlignment="Center"
                       Margin="10,0,0,0"
                       TextColor="#cccccc"/>
            </Grid>
        </Border>

        <!-- Bills List -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="5">
                <CollectionView ItemsSource="{Binding Bills}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:BillModel">
                            <Border BackgroundColor="Black" 
                                    Stroke="#222222" 
                                    StrokeThickness="1"
                                    Margin="0,0,0,5"
                                    Padding="15">
                                <Grid ColumnDefinitions="2*,2*,*,Auto">
                                    <Label Grid.Column="0" 
                                           Text="{Binding BillDate, StringFormat='{0:yyyy-MM-dd}'}" 
                                           VerticalOptions="Center"
                                           TextColor="#CCCCCC"/>
                                    <Label Grid.Column="1" 
                                           Text="{Binding BillNumber}" 
                                           VerticalOptions="Center"
                                           TextColor="#CCCCCC"/>
                                    <Label Grid.Column="2" 
                                           Text="{Binding TotalAmount, StringFormat='{0:N0} Ft'}" 
                                           HorizontalTextAlignment="End"
                                           VerticalOptions="Center"
                                           TextColor="#CCCCCC"/>
                                    <HorizontalStackLayout Grid.Column="3" 
                                                          Spacing="10"
                                                          Margin="10,0,0,0">
                                        <ImageButton Source="{AppThemeBinding Light=edit_light.png, Dark=edit_light.png}"
                                                    WidthRequest="24"
                                                    HeightRequest="24"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:BillListViewModel}}, Path=EditBillCommand}"
                                                    CommandParameter="{Binding .}"
                                                    BackgroundColor="Transparent">
                                            <ImageButton.Behaviors>
                                                <behaviors:ImageHoverHandBehavior />
                                            </ImageButton.Behaviors>
                                        </ImageButton>
                                        <ImageButton Source="{AppThemeBinding Light=delete_light.png, Dark=delete_light.png}"
                                                    WidthRequest="24"
                                                    HeightRequest="24"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:BillListViewModel}}, Path=DeleteBillCommand}"
                                                    CommandParameter="{Binding .}"
                                                    BackgroundColor="Transparent">
                                            <ImageButton.Behaviors>
                                                <behaviors:ImageHoverHandBehavior />
                                            </ImageButton.Behaviors>
                                        </ImageButton>
                                    </HorizontalStackLayout>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- Loading Indicator -->
                <ActivityIndicator IsRunning="{Binding IsLoading}"
                                  IsVisible="{Binding IsLoading}"
                                  HorizontalOptions="Center"
                                  VerticalOptions="Center"
                                  Color="#007ACC"
                                  Margin="0,20,0,0" />
            </VerticalStackLayout>
        </ScrollView>

        <!-- Pagination -->
        <Border Grid.Row="2" 
                BackgroundColor="Black" 
                Stroke="#dddddd" 
                StrokeThickness="1"
                Margin="0,10,0,0"
                Padding="15">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <Button Grid.Column="0"
                        Text="◀ Előző"
                        Command="{Binding PreviousPageCommand}"
                        BackgroundColor="#007ACC"
                        TextColor="White"
                        Padding="15,10">
                    <Button.Behaviors>
                        <behaviors:ButtonHoverHandBehavior />
                    </Button.Behaviors>
                </Button>
                
                <Label Grid.Column="1"
                       Text="{Binding PageInfo}"
                       FontSize="16"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="#CCCCCC" />
                
                <Button Grid.Column="2"
                        Text="Következő ▶"
                        Command="{Binding NextPageCommand}"
                        BackgroundColor="#007ACC"
                        TextColor="White"
                        Padding="15,10">
                    <Button.Behaviors>
                        <behaviors:ButtonHoverHandBehavior />
                    </Button.Behaviors>
                </Button>
            </Grid>
        </Border>

    </Grid>

</ContentPage>
