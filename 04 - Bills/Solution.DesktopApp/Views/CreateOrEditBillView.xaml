<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Solution.DesktopApp.ViewModels"
             xmlns:models="clr-namespace:Solution.Core.Models;assembly=Solution.Services"
             xmlns:behaviors="clr-namespace:Solution.DesktopApp.Behaviors"
             x:Class="Solution.DesktopApp.Views.CreateOrEditBillView"
             x:DataType="viewModels:CreateOrEditBillViewModel"
             Title="{Binding Title}">

    <Grid Padding="20" BackgroundColor="#0a0a0a" ColumnDefinitions="300,*,400" ColumnSpacing="20">
        
        <!-- Left Panel - Bill Information -->
        <Border Grid.Column="0" 
                BackgroundColor="Black" 
                Stroke="#222222" 
                StrokeThickness="1"
                Padding="20">
            <VerticalStackLayout Spacing="15">
                <Label Text="Számla adatai" 
                       FontSize="20" 
                       FontAttributes="Bold"
                       TextColor="#cccccc"/>
                
                <Label Text="Számlaszám:" 
                       FontAttributes="Bold"
                       TextColor="#cccccc"/>
                <Entry Text="{Binding BillNumber}" 
                       Placeholder="Például: INV-2024-001"
                       TextColor="#cccccc"
                       BackgroundColor="#060606"/>
                
                <Label Text="Számla kelte:" 
                       FontAttributes="Bold"
                       TextColor="#cccccc"/>
                <DatePicker Date="{Binding BillDate}"
                           Format="yyyy-MM-dd"
                           TextColor="#cccccc"
                           BackgroundColor="#060606"/>
                
                <BoxView HeightRequest="1" 
                         BackgroundColor="#222222" 
                         Margin="0,10,0,10"/>
                
                <Label Text="Végösszeg:" 
                       FontAttributes="Bold"
                       FontSize="18"
                       TextColor="#cccccc"/>
                <Label Text="{Binding TotalAmount, StringFormat='{0:N0} Ft'}" 
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="#007ACC"/>
            </VerticalStackLayout>
        </Border>

        <!-- Middle Panel - Add Item Form -->
        <Border Grid.Column="1" 
                BackgroundColor="Black  " 
                Stroke="#DDDDDD" 
                StrokeThickness="1"
                Padding="20">
            <VerticalStackLayout Spacing="15">
                <Label Text="Tétel hozzáadása" 
                       FontSize="20" 
                       FontAttributes="Bold"
                       TextColor="#cccccc"/>
                
                <Label Text="Megnevezés:" 
                       FontAttributes="Bold"
                       TextColor="#cccccc"/>
                <Entry Text="{Binding ItemName}" 
                       Placeholder="Termék vagy szolgáltatás megnevezése"
                       TextColor="#cccccc"
                       BackgroundColor="#060606"/>
                
                <Label Text="Egységár (Ft):" 
                       FontAttributes="Bold"
                       TextColor="#cccccc"/>
                <Entry Text="{Binding UnitPrice}" 
                       Keyboard="Numeric"
                       Placeholder="0"
                       TextColor="#cccccc"
                       BackgroundColor="#060606"/>
                
                <Label Text="Mennyiség:" 
                       FontAttributes="Bold"
                       TextColor="#cccccc"/>
                <Entry Text="{Binding Quantity}" 
                       Keyboard="Numeric"
                       Placeholder="1"
                       TextColor="#cccccc"
                       BackgroundColor="#060606"/>
                
                <Button Text="Tétel hozzáadása"
                        Command="{Binding AddItemCommand}"
                        BackgroundColor="#28A745"
                        TextColor="White"
                        Padding="15,10"
                        Margin="0,10,0,0">
                    <Button.Behaviors>
                        <behaviors:ButtonHoverHandBehavior />
                    </Button.Behaviors>
                </Button>
            </VerticalStackLayout>
        </Border>

        <!-- Right Panel - Items List -->
        <Border Grid.Column="2" 
                BackgroundColor="Black" 
                Stroke="#DDDDDD" 
                StrokeThickness="1"
                Padding="20">
            <Grid RowDefinitions="Auto,*,Auto" RowSpacing="15">
                
                <!-- Header -->
                <Label Grid.Row="0"
                       Text="Hozzáadott tételek" 
                       FontSize="20" 
                       FontAttributes="Bold"
                       TextColor="#cccccc"/>

                <!-- Items List -->
                <ScrollView Grid.Row="1">
                    <CollectionView ItemsSource="{Binding Items}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:BillItemModel">
                                <Border BackgroundColor="#060606" 
                                        Stroke="#DDDDDD" 
                                        StrokeThickness="1"
                                        Margin="0,0,0,10"
                                        Padding="10">
                                    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                        <Label Grid.Row="0" Grid.Column="0"
                                               Text="{Binding ItemName}" 
                                               FontAttributes="Bold"
                                               TextColor="#cccccc"/>
                                        
                                        <HorizontalStackLayout Grid.Row="0" Grid.Column="1" 
                                                              Spacing="5">
                                            <ImageButton Source="{AppThemeBinding Light=edit_light.png, Dark=edit_light.png}"
                                                        WidthRequest="20"
                                                        HeightRequest="20"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:CreateOrEditBillViewModel}}, Path=EditItemCommand}"
                                                        CommandParameter="{Binding .}"
                                                        BackgroundColor="Transparent">
                                                <ImageButton.Behaviors>
                                                    <behaviors:ImageHoverHandBehavior />
                                                </ImageButton.Behaviors>
                                            </ImageButton>
                                            <ImageButton Source="{AppThemeBinding Light=delete_light.png, Dark=delete_light.png}"
                                                        WidthRequest="20"
                                                        HeightRequest="20"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:CreateOrEditBillViewModel}}, Path=DeleteItemCommand}"
                                                        CommandParameter="{Binding .}"
                                                        BackgroundColor="Transparent">
                                                <ImageButton.Behaviors>
                                                    <behaviors:ImageHoverHandBehavior />
                                                </ImageButton.Behaviors>
                                            </ImageButton>
                                        </HorizontalStackLayout>

                                        <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                               Text="{Binding UnitPrice, StringFormat='Egységár: {0:N0} Ft'}"
                                               FontSize="12"
                                               TextColor="#666666"
                                               Margin="0,2,0,0"/>
                                        
                                        <Label Grid.Row="2" Grid.Column="0"
                                               Text="{Binding Quantity, StringFormat='Mennyiség: {0}'}"
                                               FontSize="12"
                                               TextColor="#666666"
                                               Margin="0,2,0,0"/>
                                        
                                        <Label Grid.Row="2" Grid.Column="1"
                                               Text="{Binding TotalPrice, StringFormat='Összesen: {0:N0} Ft'}"
                                               FontSize="12"
                                               FontAttributes="Bold"
                                               TextColor="#007ACC"
                                               HorizontalTextAlignment="End"
                                               Margin="0,2,0,0"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                        <CollectionView.EmptyView>
                            <Label Text="Még nincsenek hozzáadott tételek.&#x0a;Kérem adjon hozzá legalább egy tételt!"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   TextColor="#999999"
                                   FontAttributes="Italic"
                                   HorizontalTextAlignment="Center"
                                   Margin="0,40,0,0"/>
                        </CollectionView.EmptyView>
                    </CollectionView>
                </ScrollView>

                <!-- Action Buttons -->
                <Grid Grid.Row="2" ColumnDefinitions="*,*" ColumnSpacing="10">
                    <Button Grid.Column="0"
                            Text="Mentés"
                            Command="{Binding SaveCommand}"
                            BackgroundColor="#007ACC"
                            TextColor="White"
                            Padding="15,10">
                        <Button.Behaviors>
                            <behaviors:ButtonHoverHandBehavior />
                        </Button.Behaviors>
                    </Button>
                    
                    <Button Grid.Column="1"
                            Text="Mégse"
                            Command="{Binding CancelCommand}"
                            BackgroundColor="#DC3545"
                            TextColor="White"
                            Padding="15,10">
                        <Button.Behaviors>
                            <behaviors:ButtonHoverHandBehavior />
                        </Button.Behaviors>
                    </Button>
                </Grid>

            </Grid>
        </Border>

    </Grid>

</ContentPage>
